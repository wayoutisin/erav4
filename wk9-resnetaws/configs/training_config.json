{
  "data": {
    "dataset_path": "data/",
    "train_split": 0.8,
    "val_split": 0.2,
    "batch_size": 32,
    "num_workers": 4,
    "image_size": 224,
    "augmentation": {
      "random_resized_crop": true,
      "random_horizontal_flip": true,
      "color_jitter": {
        "brightness": 0.1,
        "contrast": 0.1,
        "saturation": 0.1,
        "hue": 0.1
      },
      "random_rotation": 10
    }
  },
  "model": {
    "name": "resnet18",
    "num_classes": 10,
    "pretrained": false,
    "custom_head": false,
    "dropout": 0.0,
    "auxiliary_classifier": false,
    "print_architecture": true
  },
  "training": {
    "epochs": 50,
    "optimizer": {
      "name": "adam",
      "lr": 0.001,
      "weight_decay": 1e-4
    },
    "scheduler": {
      "name": "step",
      "step_size": 20,
      "gamma": 0.1
    },
    "early_stopping": {
      "patience": 10,
      "min_delta": 0.001
    }
  },
  "output_dir": "outputs/",
  "log_level": "INFO",
  "seed": 42
}